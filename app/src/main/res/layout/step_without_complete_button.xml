<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.stepstone.stepper.StepperLayout
        android:id="@+id/stepperLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ms_activeStepColor="@color/colorPrimary"
        app:ms_backButtonBackground="@android:color/transparent"
        app:ms_backButtonText="НАЗАД"
        app:ms_completeButtonColor="@color/colorPrimary"
        app:ms_completeButtonText=""
        app:ms_nextButtonText="ВПЕРЕД"
        app:ms_showErrorMessageEnabled="true"
        app:ms_showErrorStateEnabled="true"
        app:ms_stepperType="tabs" />
</RelativeLayout>